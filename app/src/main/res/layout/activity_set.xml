<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:id="@+id/layoutset"
        tools:context="xin.developer97.halfsaltedfish.spiderconfig.set">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft = "5dp"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:shadowColor="#FF000000" android:shadowRadius="1.0"
                      android:id="@+id/About_software" android:textSize="20dp"
                />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000000" />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textColor="#FF0000" android:shadowRadius="1.0"
                      android:text="@string/version"
            />
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="在多任务列表隐藏卡片"
                    android:id="@+id/hide"/>
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="开启自动点击"
                    android:id="@+id/autoClick"
            />
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="自动查询ip"
                    android:id="@+id/autoCheckIp"
            />
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="启用后台服务"
                    android:id="@+id/openService"/>
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="亮屏不唤醒，等待下次后唤醒"
                      android:id="@+id/screenOff"
            />
            <Switch android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="连接或断开wifi时唤醒tiny"
                      android:id="@+id/changeOpen"
            />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowColor="#FF000000" android:shadowRadius="1.0"
                          android:text="每"
                />
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/autotime"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowColor="#FF000000" android:shadowRadius="1.0"
                          android:text="分钟自动获取配置"
                />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowColor="#FF000000" android:shadowRadius="1.0"
                    android:text="请选择ip查询方式"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="助手"
                android:id="@+id/ipWays"
                />
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowColor="#FF000000" android:shadowRadius="1.0"
                    android:text="请选择ip查询接口"
            />
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ipip"
                android:id="@+id/ipPorts"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="配置文件:" android:shadowColor="#FF000000" android:shadowRadius="1.0"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/confPath"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择文件"
                android:id="@+id/chroseConf"/>



            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="请选择距你所在地近的ip" android:shadowColor="#FF000000" android:shadowRadius="1.0"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ip"
                    android:id="@+id/ip"
            />
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ipGroup"
                    android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="广东"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="157.255.173.182"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="上海"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="140.207.62.38"
                />
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="210.22.247.196"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="北京"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="111.206.25.206"
                />
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123.126.122.24"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="天津"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="125.39.52.35"
                />
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="111.161.111.158"

                />
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="111.161.64.51"

                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="重庆"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="58.144.152.119"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="58.144.152.26"/>


            </RadioGroup>
            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="自定义壁纸"
                    android:id="@+id/background"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textSize="18sp"
                    android:id="@+id/setting"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
